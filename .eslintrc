{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true,
    "node": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "ecmaFeatures": {
      "jsx": true
    },
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    "arrow-parens": [2, "always"],
    "arrow-spacing": [
      2,
      {
        "before": true,
        "after": true
      }
    ],
    "eol-last": 0,
    "indent": [2, 2],
    "jsx-quotes": [1, "prefer-single"],
    "linebreak-style": [2, "unix"],
    "new-cap": 0,
    "no-console": 0,
    "no-debugger": 0,
    "no-underscore-dangle": 0,
    "no-use-before-define": 0,
    "quotes": [2, "single"],
    "react/jsx-no-undef": 1,
    "react/jsx-uses-react": 1,
    "react/jsx-uses-vars": 1,
    "semi": [2, "always"],
    "strict": 0
  }
}